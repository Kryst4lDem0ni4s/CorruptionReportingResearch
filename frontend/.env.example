# ============================================
# Corruption Reporting System - Frontend Config
# ============================================

# Environment
NODE_ENV=development

# Server Settings
PORT=3000
HOST=0.0.0.0

# Backend API
BACKEND_URL=http://localhost:8000
BACKEND_API_PREFIX=/api/v1
BACKEND_TIMEOUT=300000

# Logging
LOG_LEVEL=debug
LOG_FORMAT=dev
LOG_TO_FILE=false
LOG_TO_CONSOLE=true
LOG_COLORIZE=true

# Compression
COMPRESSION_ENABLED=true
COMPRESSION_LEVEL=1
COMPRESSION_THRESHOLD=1024

# Security
CORS_ENABLED=true
CORS_ORIGIN=*
CORS_CREDENTIALS=true

RATE_LIMIT_ENABLED=false
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100

# Static Files
STATIC_MAX_AGE=0
STATIC_ETAG=true
STATIC_LAST_MODIFIED=true

# Upload
UPLOAD_MAX_FILE_SIZE=52428800
UPLOAD_MAX_FILES=10

# Performance
KEEP_ALIVE_TIMEOUT=65000
HEADERS_TIMEOUT=66000
REQUEST_TIMEOUT=30000
BODY_LIMIT=10mb

# Development
HOT_RELOAD=true
DEBUG_MODE=true
VERBOSE_LOGGING=true
MOCK_BACKEND=false
